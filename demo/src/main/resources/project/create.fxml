<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.CreateEmployeeController">
    <children>
        <Label text="Create Employee" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TextField fx:id="firstNameField" promptText="First Name"/>
        <TextField fx:id="lastNameField" promptText="Last Name"/>
        <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
        <TextField fx:id="employeeTypeField" promptText="Employee Type (ID)"/>
        <Button text="Create" onAction="#createEmployee"/>
    </children>
</VBox>